CC      = gcc
OBJS    = functions/functions.o client/tcp_client.o client/client.o
PROG    = client/client
FLAGS   = -Wall -Wextra

all: ${PROG}

clean:
	rm -f ${OBJS} *~

${PROG}:	${OBJS}
	${CC} ${FLAGS} ${OBJS} -o $@

.c.o:
	${CC} ${FLAGS} $< -c -o $@

functions/functions.o:	functions/functions.c
functions/functions.c:	functions/functions.h

client/client.o:	client/client.c
client/client.c:	client/client.h
