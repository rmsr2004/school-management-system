CC      = gcc
OBJS    = functions/functions.o client/tcp_client.o users_list/users_list.o
PROG    = client/client
FLAGS   = -Wall -Wextra

all: ${PROG}

clean:
	rm -f ${OBJS} *~

${PROG}:	${OBJS}
	${CC} ${FLAGS} ${OBJS} -o $@

.c.o:
	${CC} ${FLAGS} $< -c -o $@

functions/functions.o:	functions/functions.c
functions/functions.c:	functions/functions.h

users_list/users_list.o:	users_list/users_list.c
users_list/users_list.c:	users_list/users_list.h
