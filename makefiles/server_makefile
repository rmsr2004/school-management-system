CC      = gcc
OBJS    = admin/admin.o functions/functions.o user/user.o server/server.o client/client.o users_list/users_list.o
PROG    = server/server
FLAGS   = -Wall -Wextra -g

all: ${PROG}

clean:
	rm -f ${OBJS} *~

${PROG}:	${OBJS}
	${CC} ${FLAGS} ${OBJS} -o $@

.c.o:
	${CC} ${FLAGS} $< -c -o $@

admin/admin.o:	admin/admin.c
admin/admin.c:	admin/admin.h

functions/functions.o:	functions/functions.c
functions/functions.c:	functions/functions.h

user/user.o:	user/user.c
user/user.c:	user/user.h

users_list/users_list.o:	users_list/users_list.c
users_list/users_list.c:	users_list/users_list.h

client/client.o:	client/client.c
client/client.c:	client/client.h