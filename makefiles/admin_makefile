CC      = gcc
OBJS    = functions/functions.o admin/udp_admin.o admin/admin.o
PROG    = class_admin
FLAGS   = -Wall -Wextra

all: ${PROG}

clean:
	rm -f ${OBJS} *~

${PROG}:	${OBJS}
	${CC} ${FLAGS} ${OBJS} -o $@

.c.o:
	${CC} ${FLAGS} $< -c -o $@

functions/functions.o:	functions/functions.c
functions/functions.c:	functions/functions.h

admin/admin.o:	admin/admin.c
admin/admin.c:	admin/admin.h